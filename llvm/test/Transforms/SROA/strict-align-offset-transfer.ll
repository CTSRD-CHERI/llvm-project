  %h.e = getelementptr inbounds %struct.f, %struct.f addrspace(@PTR_AS@)* %h, i32 0, i32 1
  %h.d.i8 = bitcast %struct.c addrspace(@PTR_AS@)* %h.d to i8 addrspace(@PTR_AS@)*
